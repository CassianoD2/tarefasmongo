<html>
<head>
	<title>Lista de Tarefas</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	
	<script>
		$(document).ready(function (){
			$('input[type="checkbox"]').on('change', function(e) {
				if (e.target.checked) {
					$('#'+e.target.value).attr('style', 'color: red');
				} else {
					$('#'+e.target.value).attr('style', '');
				}
			});
		});	
	</script>
</head>

<body>
	<nav class="navbar navbar-dark bg-dark">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">Lista de Tarefas</a>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
				</ul>
			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>

	<div class="container" style="margin-top: 10px;">
		<form method="post" action="/tarefa/adicionar">
			<label>Adicionar Tarefa</label>
			<input type="text" name="tarefa" placeholder="Adicionar Tarefa">
			<input type="submit" value="Adicionar">
			<input type="submit" value="Remover" form="formDelete">
		</form>

		<form id="formDelete" method="post" action="/tarefa/remover">
			<table class="table" style="width: 50%">
				<thead>
					<tr>
						<th class="text-center">x</th>
						<th><%= titulo %></th>
					</tr>
				</thead>
				<tbody>		
					<% tarefas.forEach(function(tarefa){ %>
					<tr class="removerTr">
						<td class="text-center">
								<input type="checkbox" name="tarefas"
								class="remover" 
								value="<%= tarefa._id %>">
						</td>
						<td id="<%= tarefa._id %>">
							<span><%= tarefa.descricao %></span>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</form>
	</div>
</body>
</html>